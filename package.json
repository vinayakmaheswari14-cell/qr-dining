{
  "name": "scan-dine-lite",
  "version": "1.0.0",
  "description": "Restaurant QR Menu System",
  "main": "server/index.js",
  "scripts": {
    "start": "cd client && npm start",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/index.js",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "install-client": "cd client && npm install",
    "install-server": "npm install",
    "install-all": "npm run install-server && npm run install-client",
    "seed": "node server/seedDatabase.js",
    "setup": "node scripts/setup.js",
    "verify-email": "node scripts/verify-email-setup.js",
    "test-email": "echo 'Testing password reset email...' && curl -X POST http://localhost:5000/api/auth/forgot-password -H \"Content-Type: application/json\" -d \"{\\\"email\\\":\\\"admin@restaurant.com\\\"}\"",
    "fix": "node fix-menu.js",
    "cleanup": "node server/cleanupDatabase.js",
    "test-order": "node server/createTestOrder.js"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.5.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^7.0.10",
    "qrcode": "^1.5.3"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "nodemon": "^3.0.1"
  }
}

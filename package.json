{
  "name": "scan-dine-lite",
  "version": "1.0.0",
  "description": "Restaurant QR Menu System",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/index.js",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "install-client": "cd client && npm install",
    "install-server": "npm install",
    "install-all": "npm run install-server && npm run install-client",
    "seed": "node server/customSeedData.js",
    "db-stats": "node server/updateDatabase.js",
    "list-menu": "node server/quickUpdates.js",
    "create-demo": "node server/createDemoTable.js",
    "setup": "node scripts/setup.js",
    "check": "node debug-check.js",
    "fix": "node fix-menu.js",
    "cleanup": "node server/cleanupDatabase.js",
    "test-order": "node server/createTestOrder.js"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.5.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "multer": "^1.4.5-lts.1",
    "qrcode": "^1.5.3",
    "express-rate-limit": "^6.10.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.0"
  }
}